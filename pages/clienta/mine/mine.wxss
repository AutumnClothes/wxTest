.content{
  position: fixed;
  bottom: 100rpx;
  box-sizing: border-box;
  width: 100%;
}
/* .content view{
  width: 100%;
} */
.user-box{
  width: 690rpx;
  height:254rpx;
  margin: 0 auto;
  padding: 66rpx 14rpx;
  border-bottom:1rpx solid #e5e5e5; 
  box-sizing: border-box;
}
.user-box-picture{
  float: right;
  position: relative;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  box-shadow: 0px 5px 30px 0px rgba(179, 179, 179, 0.33);
  background-repeat: no-repeat;
  background-size:100%;
  background-position: center;
}
.user-box-name{
  font-size: 44rpx;
  color: rgb(50, 50, 50);
  max-width: 500rpx;
  margin-bottom: 25rpx;
  display: flex;
  justify-content: flex-start;
  align-items: flex-end;
}
.name-box{
  max-width:265rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.user-box-position{
  margin-left:20rpx;
  font-size: 28rpx;
  color: rgb(50, 50, 50);
}
.user-box-company{
  font-size: 28rpx;
  color: rgb(50, 50, 50);
  max-width: 500rpx;
}
.mine-list{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 690rpx;
  height: 120rpx;
  box-sizing: border-box;
  margin: 0 auto;
  border-bottom: 1rpx solid #e5e5e5;
}
.mine-list-icon-box{
  width: 55rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.mine-list-icon{
  background-repeat: no-repeat;
  background-position: center;
  background-size: 100%;
}
.mine-list-title{
  text-align: justify;
  width: 600rpx;
  font-size: 34rpx;
  color: rgb(51, 51, 51);
}
.mine-list-path{
  width: 16rpx;
  height: 26rpx;
}
.guidance-box_one{
  position: fixed;
  left:250rpx;
  height:86rpx;
  line-height: 1;
  padding:26rpx 30rpx !important;
}
.guidance-triangle_one{
  
  left:-26rpx;
  top:50%;
  transform: translateY(-50%)
}
.guidance-box_four{
  position: fixed;
  margin-top:0;
  width:auto !important;
  z-index:999;
  color:#cfae82 !important;
  background-color: rgb(25, 25, 25) !important;
  background-image: none;
  top:364rpx;
  left:240rpx;
  right: auto;
  height:88rpx;
  line-height: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding:0 35rpx;
}
.guidance-triangle_four{
  border-color:transparent !important;
  border-right-color:rgb(25, 25, 25) !important;
  left:-26rpx;
  top:50%;
  transform: translateY(-50%)
}