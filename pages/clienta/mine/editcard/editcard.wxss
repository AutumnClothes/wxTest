/* pages/clienta/mine/editcard/editcard.wxss */
.picker{
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.top{
  position: fixed;
  top:0;
  width: 100%;
  background-color: #fff;
  border-bottom: 1rpx solid #e5e5e5;
  z-index: 997;
}
.modal-input-meng{
  position: fixed;
  top:0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #000;
  opacity:0.3;
  z-index: 998;
}
.modal-title{
  width: 100%;
  text-align: center;
  margin:27rpx 0 35rpx 0;
  font-size: 34rpx;
  color:#2d2e33;
}
.modal-input-box{
  position: fixed;
  top:40%;
  width: 70%;
  left:50%;
  transform: translate(-50%,-50%);
  border:1rpx solid #ccc;
  background-color: #fff;
  border-radius: 10rpx;
  z-index: 999;
}
.modal-input{
  padding: 20rpx 12rpx;
  margin: 0 45rpx;
  height:76rpx;
  font-size: 32rpx;
  box-sizing: border-box;
  color: #383842;
}
.modal-button-box{
  margin-top: 62rpx;
  display: flex;
  align-items: center;
}
.modal-button{
  width: 50%;
  box-sizing: border-box;
  border-top:1rpx solid #ccc;
  height:86rpx;
  line-height: 86rpx;
  text-align: center;
}
.modal-button-left{
  color: #b0b3ba;
}
.modal-button-right{
  border-left:1rpx solid #ccc;
  color:#ff8a01;
}
.modal-textarea-box{
  position: fixed;
  top:200rpx;
  width: 90%;
  background-color: #fff;
  left:50%;
  transform: translateX(-50%);
  padding:10rpx;
  box-sizing: border-box;
  border-radius: 8rpx;
  z-index: 999;
}
.content{
  position: absolute;
  width: 100%;
  bottom: 0;
  box-sizing: border-box;
}
.content-item-title{
  font-size: 28rpx;
  color: rgb(153, 153, 153);
}
/*基本信息*/
.content-item-title{
  font-size: 28rpx;
  color: rgb(153, 153, 153);
  height:120rpx;
  line-height: 120rpx;
  margin-left: 25rpx
}
.essential-information-box{
  border-top:1rpx solid #e5e5e5 ;
  border-bottom:1rpx solid #e5e5e5 ;
}
.form-item-box{
  margin-left: 34rpx;
  padding:40rpx 0;
  display: flex;
  align-items: flex-start;
  border-bottom:1rpx solid #e5e5e5 ;
  box-sizing: border-box;
}
.item-address-box{
  margin-left: 34rpx;
  display: flex;
  box-sizing: border-box;
  padding: 40rpx 0;
}
.edit-righr-bar{
  margin-right: 20rpx;
  float: right;
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
}
picker{
  margin-right: 45rpx;
  float: right;
  width: 100%;
}
.form-item-title{
  width: 220rpx;
  position: relative;
  left:-3rpx;
  font-size: 34rpx;
  color: rgb(102, 102, 102);
}
.form-item-model{
  text-align: right !important;
  width: 470rpx;
}
.form-item-model-input{
  font-size: 34rpx;
  color: rgb(0, 0, 0);
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  margin-right: 45rpx;
  text-align: right;
}
.input-placeholder-class{
  font-size: 34rpx;
  color: #999;
  margin-right: 45rpx;
}
.textarea-placeholder-class{
  font-size: 34rpx;
  color: #999;
  text-indent:1em;
  min-height:140rpx;
}
.textarea-txt{
  text-align: left;
  font-size: 34rpx;
  color: rgb(0,0,0);
  line-height: 1.412;
  width:680rpx;
}
.form-item-path{
  position: relative;
  right:10rpx;
  width: 16rpx;
  height: 25rpx;
}
/*介绍*/
.form-item-introduce{
  padding: 0 35rpx;
  font-size: 34rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.content-introduce-title{
  font-size: 34rpx;
  color: rgb(102, 102, 102);
  margin:45rpx 0
}
.content-introduce-content{
  font-size: 34rpx;
  color: rgb(51, 51, 51);
  padding: 25rpx 0;
  box-sizing: border-box;
}
.content-introduce-tag{
  padding: 40rpx 0 20rpx 0;
  min-height: 40rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap
}
.tag-box{
  padding: 0 17rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  margin-right: 10rpx;
  margin-bottom: 20rpx;
  text-align: center;
  color: rgb(255, 255, 255);
  border-bottom-right-radius: 8rpx;
  border-top-right-radius: 8rpx;
  border-top-left-radius: 8rpx;
  background-color: rgb(255, 74, 18);
}
.tag-add{
  margin-bottom: 20rpx;
  border:1rpx dashed rgb(204, 204, 204);
  border-radius: 8rpx;
  width: 38rpx;
  height: 38rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.tag-add-img{
  width: 20rpx;
  height:20rpx;
}
/*产品*/
.product-box{
  width: 688rpx;
  height: 318rpx;
  background-repeat: no-repeat;
  background-position: center;
  margin-bottom: 20rpx;
}
.form-item-model-textarea{
  font-size: 34rpx;
  color: rgb(0, 0, 0);
  height:250rpx;
  padding:20rpx 12rpx; 
  box-sizing: border-box;
  width:90%;
  margin:0 auto;
}
.product-box-true{
  border:1rpx dashed rgb(153, 153, 153);
}
.product-box-shade{
  background-image: linear-gradient( rgba(0,0,0,0) 0%, rgba(0,0,0,0.6) 100%);
  position: relative;
  top:238rpx;
  width: 688rpx;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 25rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  color: rgb(255, 255, 255);
}
.product-box-add-img{
  width: 60rpx;
  height:60rpx;
  position: relative;
  left:50%;
  top:90rpx;
  transform: translateX(-50%);
}
.product-box-add-text{
  font-size: 30rpx;
  color: rgb(153, 153, 153);
  position: relative;
  top:135rpx;
  text-align: center;
}
/*分割线*/
.division{
  height:40rpx;
  width: 100%;
  box-sizing: border-box;
  border-bottom: 20rpx solid #f0f1f6;
}
.address-box{
  text-align: right;
  margin-right: 45rpx;
  font-size: 34rpx;
  color: rgb(0, 0, 0);
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.address-city-true{
  font-size: 34rpx;
  color: rgb(0, 0, 0);
  text-align: right;
}
.textarea-box{
  margin-right: 45rpx;
  font-size: 34rpx;
  min-height: 150rpx;
  color: rgb(0, 0, 0);
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.textarea-box-class{
  margin-right: 45rpx;
  font-size: 34rpx;
  min-height: 150rpx;
  color: rgb(0, 0, 0);
}
.picture-box{
  position: fixed;
  top:200rpx;
  width: 90%;
  background-color: #fff;
  left:50%;
  transform: translateX(-50%);
  padding:10rpx;
  box-sizing: border-box;
  border-radius: 8rpx;
  z-index: 999;
}
.picture-button{
  
  width: 100%;
  background-color: #fff
}
.picture-img{
  margin-top:200rpx;
  height:500rpx;
  width: 90%;
  opacity:1;
  
  background-repeat: no-repeat;
  background-size: 100%;
  background-position: center;
}
.bottom-box{
  border-top:1rpx solid #e5e5e5 ;
  position: fixed;
  height:100rpx;
  width: 100%;
  background-color: #fff;
}
.bottom-button{
  height:100rpx;
  line-height: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.guidance-box{
  left: 50%;
  transform: translateX(-50%);
  word-break: break-all;
  width:510rpx;
  line-height:42rpx;
}
.guidance-triangle{
  bottom:-26rpx;
  left: 50%;
  transform: translateX(-50%);
}