  align-items: flex-start;
  justify-content: center;
  z-index: 990;
  background-color: #fff;
  border-top: 1rpx solid #f0f1f6;
}

.share-item {
  line-height: 1;
  width: 25%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 28rpx;
  color:#7f8389;
}

.share-image {
  margin-top: 47rpx;
  margin-bottom: 14rpx;
