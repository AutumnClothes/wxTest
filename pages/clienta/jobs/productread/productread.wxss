/* pages/clienta/jobs/productread/productread.wxss */
@import '../../../style/product.wxss';
@import '../../../style/productcard.wxss';
@import '../../../style/recommend.wxss';

.adviser-box{
  display: flex;
  align-items: center;
  position: fixed;
  background-color: #fff;
  width:100%;
  z-index: 700;
}
.adviser-img-box{
  width: 80rpx;
  height:80rpx;
  border-radius: 50%;
  box-sizing: border-box;
  overflow: hidden;
  margin:10rpx 13rpx 10rpx 30rpx;
}
.adviser-img{
  width:80rpx;
  height: 80rpx;
  min-width:80rpx;
  min-height:80rpx;
}
.adviser-details{
  width: 370rpx;
}
.adviser-name{
  font-size: 34rpx;
  color: #000;
  display: flex;
  justify-content: flex-start;
  align-items: flex-end;
}

.adviser-name-box{
  max-width:210rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.adviser-position{
  display: inline-block;
  margin-left:12rpx;
  font-size: 26rpx;
  color:#aaa;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.adviser-company{
  max-width:350rpx;
  font-size: 26rpx;
  color: #aaa;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.adviser-button{
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.form-button{
  font-size: 30rpx;
  color:#fff;
  padding:0 23rpx !important;
  height:60rpx;
  width:110rpx;
  box-sizing: border-box;
  background-color: #ff8a01;
  border-radius: 30rpx;
  line-height: 60rpx;
  margin-right: 10rpx;
  position: relative;
  z-index:800;
}
.operateShow-meng{
  position: fixed;
  left:0;
  right:0;
  background-color: transparent;
  z-index: 699;
}
.operateShow-box{
  position: absolute;
  top:106rpx;
  right:84rpx;
  box-sizing: border-box;
  box-shadow: 0px 5px 40px 0px rgba(179, 179, 179, 0.33);
  background-color: rgb(255, 255, 255);
  border-radius: 12rpx;
  padding:20rpx 32rpx;
  z-index: 998;
}
.operate-show-button{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height:80rpx;
  line-height: 1;
  font-size: 34rpx;
  color: #333;
}
.operate-icon{
  width:34rpx;
  text-align: center;
  margin-right: 15rpx;
}
.triangle{
  position: absolute;
  top:-36rpx;
  left:50%;
  transform: translate(-50%);
  width: 36rpx;
  height:36rpx;
  box-sizing: border-box;
  border:18rpx solid transparent;
  border-bottom: 18rpx solid #fff;
}
/*列表项*/
.item-box{
  position: relative;
  border-radius: 12rpx;
  width:710rpx;
  margin:0 auto;
  box-sizing: border-box;
  overflow: hidden;
  word-break:break-all;
  text-align: center;
}
.img-box{
  max-width: 710rpx;
  margin:0 auto;
  text-align: center;
}
.txt-box{
  padding:16rpx 32rpx 30rpx 32rpx;
  box-sizing: border-box;
  line-height:57.6rpx;
  font-size: 32rpx;
  letter-spacing:2rpx;
  white-space:normal;
  word-break:break-all;
  text-align:justify;
}
.sort-box{
  position: absolute;
  right: 35rpx;
  padding:10rpx;
  box-sizing: border-box;
}

.product-cover{
  border:1rpx solid #f0f1f6;
  margin-bottom: 20rpx;
  position: relative;
}
.product-cover-meng{
  position: absolute;
  width:100%;
  height:100%;
}

.private-line{
  position: relative;
  padding: 51rpx 30rpx 47rpx 30rpx;
  box-sizing: border-box;
}
.line-box{
  height:2rpx;
  background-color: rgb(199, 199, 204);
}
.private-box{
  display: flex;
  align-items: center;
  line-height: 1;
  padding:33rpx 9rpx 30rpx 15rpx;
  background-color: #f0f1f6;
  box-sizing: border-box;
  position: absolute;
  left:50%;
  top:0;
  transform: translateX(-50%);
}

.input-value {
  margin: 30rpx 34rpx;
  position: relative;
  border-radius: 24rpx;
}
.bg_f5 {
  font-size: 32rpx;
  letter-spacing: 2rpx;
  background-color: rgb(246, 246, 246);
  border-radius: 24rpx;
  padding: 30rpx 35rpx;
  box-sizing: border-box;
  line-height: 50rpx;
  color: #333;
  position: relative;
  min-height:100rpx;
  text-align: justify;
}
.bg_triangle {
  position: absolute;
  top: -23rpx;
  left: 60rpx;
  width: 14rpx;
  height: 14rpx;
  border: 14rpx solid transparent;
  border-bottom: 14rpx solid rgb(246, 246, 246);
  box-sizing: border-box;
}
.bg_mark {
  position: absolute;
  top: 34rpx;
  left: 44rpx;
}
.bg_span {
  text-indent: 68rpx;
  overflow: hidden;
  max-height:400rpx;
}
.bg_textarea {
  width: 612rpx;
  font-size: 32rpx;
  line-height:50rpx;
  color:#333;
}
.share {
  position: fixed;
  height: 200rpx;
  width: 100%;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
  border-top:1rpx solid #f0f1f6;
