}
.share-image-tsf{transform: translateX(-3rpx)}
.bottom-box {
  position: fixed;
  height: 100rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  border-top: 1rpx solid #f0f1f6;
  background-color: #fff;
  z-index: 800;
  font-size: 32rpx;
  color:#333;
}
.bottom-button{
  width:375rpx;
  height:100rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
}
.product-border{
  border-top: 1rpx solid #e5e5e5;
