.container{
  background-color: #fefefe
}
/*顶部样式*/
.top{
  overflow: hidden;
  position: fixed;
  top:0;
  height: 407rpx;
  width: 100%;
  background-repeat: no-repeat;
  background-position: center;
  background-size: 100%;
}
.top-box-style{
  background: transparent !important;
  color: #fff !important;
}
.top image{
  width: 88.4%;
  height:307rpx;
}
/*页面内容box*/
.content{
  position: fixed;
  top:332rpx;
  width: 100%;
}
/*list单项。css*/
.job-list-item{
  margin: 0 auto; 
  position:relative;
  box-sizing: border-box;
  width: 93.33333333%;
  height: 150rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  background-color: rgb(255, 255, 255);
  box-shadow: 0px 5px 30px 0px rgba(179, 179, 179, 0.33);
 
  /*一行居中flex布局*/
  display:flex;
  justify-content:center;
  align-items:center;
}
/*list单项title*/
.job-list-item-title{
  width:80%;
  padding-left:25rpx; 
  font-size: 34rpx;
  color: #333;
}
/*list单项左边icon。css*/
.job-list-item-l{
  margin-left:37rpx;
}
/*list单项右边跳转箭头。css*/
.job-list-item-r{
  width: 16rpx;
  height: 26rpx;
  margin-right: 30rpx;
}
.guidance-box_one{
  padding:26rpx !important;
  height:86rpx;
  top:364rpx;
  left:240rpx;
}
.guidance-triangle_one{
  left:-26rpx;
  top:50%;
  transform: translateY(-50%)
}
.guidance-box_four{
  position: fixed;
  margin-top:0;
  width:auto !important;
  z-index:999;
  color:#cfae82 !important;
  background-color: rgb(25, 25, 25) !important;
  background-image: none;
  top:534rpx;
  left:240rpx;
  right: auto;
  height:88rpx;
  line-height:1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding:0 35rpx;
}
.guidance-triangle_four{
  border-color:transparent !important;
  border-right-color:rgb(25, 25, 25) !important;
  left:-26rpx;
  top:50%;
  transform: translateY(-50%);
}