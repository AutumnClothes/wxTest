/* pages/clienta/jobs/newmsg/newmsg.wxss */
.content{
  position: fixed;
}
.group-box{
  border:1rpx solid red
}
.meng{
  background-color: rgb(16, 15, 23);
  opacity: 0.4;
}
/*搜索框*/
.search-box{
  display: flex;
  align-items:center;
}
input{
  float: left;
  box-sizing: border-box;
  border-radius: 10rpx;
  width: 635rpx;
  height: 66rpx;
  background-color: #efeff4;
  margin-left: 14rpx;
  padding-left: 70rpx;
  font-size: 26rpx;
}
.search-img{
  position: absolute;
  top:18rpx;
  left:46rpx;
  float: left;
  width: 30rpx;
  height:30rpx;
  z-index: 999;
}
.msg-img{
  width: 50rpx;
  height: 50rpx;
}
.msg-img-button{
  width:100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
/*内容*/
.content-box{
  bottom: 0;
}
.content-item-box{
  background-color: #f0f1f6;
  width: 100%;
  position: absolute;
  top:90rpx;
}
/*内容单项*/
.content-ite-box{
  display: flex;
  border-top:1rpx solid #f0f1f6;
  height: 266rpx;
  margin-bottom: 12rpx;
  background-color: #fff;
}
.content-item{
  min-width: 750rpx;
  display:flex;
  background-color: #fff;
  box-sizing: border-box;
  padding: 30rpx 28rpx;
  position: relative;
  transition: all 0.2s linear;
  height:200rpx;
}
.content-item-img{
  width: 140rpx;
  height: 140rpx;
}
.content-item-ite{
  margin-left: 23rpx;
  width: 530rpx;
}
.content-item-text{
  font-size: 32rpx;
  color: rgb(51, 51, 51);
  height: 85rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 20rpx;
}
.content-item-time{
  font-size: 20rpx;
  color: rgb(171, 171, 171);
}
.content-del{
  background-color: rgb(255, 74, 18);
  color:#fff;
  font-size: 32rpx;
  min-width: 288rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s linear;
}
/*添加文章*/
.text-add-box{
  z-index: 999;
  background-color: #fff;
  padding:45rpx 30rpx 0 30rpx;
  box-sizing: border-box;
  position: fixed;
  top:38.2%;
  left:50%;
  transform: translate(-50%,-50%);
  border-radius: 8rpx;
}
.text-add-title{
  width:100%;
  font-size: 34rpx;
  color: rgb(51, 51, 51);
  text-align: center;
  margin-bottom: 30rpx;
  box-sizing: border-box;
  height:34rpx;
  line-height: 34rpx;
}
.text-add-close{
  position: absolute;
  top:20rpx;
  left:20rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.text-add-img{
  width: 22rpx;
  height: 22rpx;
}
.clipboard-box{
  border:1rpx solid rgb(225, 226, 230);
  border-radius: 8rpx;
  padding: 20rpx 25rpx;
  box-sizing: border-box;
  width: 580rpx;
  height: 167rpx;
  font-size: 28rpx;
  color: rgb(153, 153, 153);
  line-height: 1.5;
  margin-bottom: 40rpx;
}
.clipboard-show{
  color: rgb(51, 51, 51);
  word-break: break-all;
  text-align: justify;
  white-space: normal;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.save-box{
  border-radius: 8rpx;
  background-color: rgb(255, 160, 25);
  height: 88rpx;
  line-height: 88rpx;
  width: 580rpx;
  text-align: center;
  font-size: 34rpx;
  color: rgb(255, 255, 255);
}
.text-add-bottom{
  font-size: 24rpx;
  height:100rpx;
  color: rgb(153, 153, 153);
  width: 580rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1
}


