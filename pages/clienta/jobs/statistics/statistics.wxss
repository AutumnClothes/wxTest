/* pages/clienta\jobs\statistics/statistics.wxss */
@import '../../../style/productcard.wxss';
.content{
  background-color: #f0f1f6;
}
.statistics-top-card{
  /* height:468rpx; */
  width:750rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
}
.product-box-card,.product-box-two-card,.product-box-the-card,.product-img-card,.msg-box{
  width:640rpx;
}
.msg-box{
  box-shadow:0px 5rpx 40rpx 0px rgba(179, 179, 179, 0.33)
}
/*tab分页*/
.tab-box{
  height:88rpx;
  width: 100%;
  padding-bottom:13rpx; 
  background-color: #fff;
  box-sizing: border-box;
}
.tab-box-title{
  width: 100%;
  height:75rpx;
  line-height: 96rpx;
  display: flex;
  justify-content: center;
}
.tab-box-title view{
  box-sizing: border-box;
  font-size: 34rpx;
  color: rgb(53, 53, 53);
}
.tab-box-title-item{
  width: 250rpx;
  padding-top:24rpx !important; 
  margin:0 !important;
  display: flex;
  align-items: flex-start;
  justify-content: center;
  line-height: 1;
  font-size: 34rpx
}
.tab-box-title-item-true{
  color:#ffa134 !important;
}
.tab-box-solid-zero{
  margin:0 auto;
  height:4rpx;
  width:135rpx;
  position:relative;
  left:-250rpx;
  background-image:linear-gradient( 0deg, rgb(255,186,23) 0%, rgb(255,160,25) 100%);
  transition: all 0.3s ease;
}
.tab-box-solid-one{
  margin:0 auto;
  height:4rpx;
  width:135rpx;
  position:relative;
  /* left:-130rpx; */
  background-image:linear-gradient( 0deg, rgb(255,186,23) 0%, rgb(255,160,25) 100%);
  transition: all 0.3s ease;
}
.tab-box-solid-two{
  margin:0 auto;
  height:4rpx;
  width:135rpx;
  position:relative;
  left:250rpx;
  background-image:linear-gradient( 0deg, rgb(255,186,23) 0%, rgb(255,160,25) 100%);
  transition: all 0.3s ease;
}

/*swiper*/
swiper{
  background-color: #f0f1f6;
  border-top:1rpx solid #eee;
}
scroll-view {
  height:100%;
}

.dynamic{
  position: relative;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 14rpx;
  height: 136rpx;
  margin: 0 25rpx 20rpx 25rpx;
  padding: 19rpx;
  margin-top: 20rpx;
}
.dynamic-portrait{
  display: inline-block;
  box-sizing: border-box;
  border-radius: 50%;
  height:100rpx;
  width: 100rpx;
}
.dynamic-portrait-icon{
  display:inline-block;
  transform: translate(-100%,-74rpx);
  height: 36rpx;
  line-height: 36rpx;
  color:#fff;
  width: 36rpx;
  font-size: 24rpx;
  text-align: center;
  border-radius: 50%;
  background-color: #ff5f19
}
.dynamic-text{
  position: absolute;
  top:50%;
  left:140rpx;
  transform: translateY(-50%);
  width: 550rpx;
  float: right;
  /* margin-right: 70rpx; */
  font-size: 32rpx;
}
.dynamic-name-text{
  float: left;
  color:#aaa;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  max-width: 165rpx;
  margin-right: 10rpx;
}
.dynamic-text-last{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  max-width: 480rpx !important;
}
.dynamic-time{
  position: absolute;
  top:10rpx;
  right: 10rpx;
  color:#dfdfdf;
  float: right;
  font-size: 24rpx;
  text-align: right;
  height:45rpx;
  line-height: 54rpx;
}
.dynamic-st-box-img-box{
  display: flex;
  align-items: flex-end;
  justify-content: flex-start;
  margin-top:8rpx;
}
.dynamic-st-box-img {
  width:48rpx;
  height:48rpx;
  border-radius:24rpx;
  border:1px solid #fff;
  box-sizing:border-box;
  margin:0 -8rpx 0 0;
}
.tab-box-title-r,.tab-box-title-l{
  font-size: 34rpx;
  height:100%;
}
.tag-box{
  padding: 0 12rpx 0 30rpx;
  box-sizing: border-box;
  position: relative;
  background-color: #fff;
}
.tag-title-box{
  display: flex;
  justify-content: flex-start;
  height:90rpx;
  align-items: center;
}
.tag-color{
  width: 8rpx;
  height:30rpx;
}
.tag-title{
  font-size: 32rpx;
  color: rgb(26, 26, 26);
  margin-left:18rpx;
}
.tag-ite{
  display: flex;
  flex-wrap:wrap;
  box-sizing: border-box;
  width: 100%;
  margin-top:30rpx;
  min-height:40rpx;
}
.tag-item-box{
  font-size: 28rpx;
  float: left;
  padding: 0 22rpx !important;
  margin:8rpx 9rpx 28rpx 0;
  border-radius: 8rpx;
  background-color: rgb(245, 245, 245);
  height: 52rpx;
  line-height: 52rpx;
  text-align: center;
  color: #515151;
  clear: none;
}
.tag-item-box-false{
  color: rgb(51, 51, 51);
}
.tag-item-box-true{
  color:#fefefe;
  background-color: #ff8a01;
}
.usertag-li-icon{
  width: 8rpx;
  height:28rpx;
  position: absolute;
  top:30rpx;
  left:30rpx;
}
.statistics-default-box{
  width:100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  text-align: center;
  margin-bottom:88rpx;
  color: rgb(153, 153, 153);
  font-size: 32rpx;
}
  