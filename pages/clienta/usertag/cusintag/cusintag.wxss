.content{
  position: fixed;
  left:0;
  right: 0;
  bottom: 0;
  padding-top: 20rpx;
  box-sizing: border-box;
  background-color:#f0f1f6;
}
.item-check{
  width:46rpx;
  height:46rpx;
  margin: 22rpx 20rpx 22rpx 26rpx;
  box-sizing: border-box;
}
.add-box{
  width:100%;
  display: flex;
  font-size: 34rpx;
  color: rgb(102, 102, 102);
  line-height: 88rpx;
  height:88rpx;
  background-color:#fff;
  border-bottom: 1rpx solid #f0f1f6
}
scroll-view{
  border-top:1rpx solid #f0f1f6;
  border-bottom:1rpx solid #f0f1f6;
  background-color: #f0f1f6
}
.scroll-item-box{
  height:110rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
}
.item-box{
  border-bottom: 1rpx solid #f0f1f6;
  box-sizing: border-box;
  height:110rpx;
  line-height: 110rpx;
  width: 650rpx;
  display: flex;
  align-items: center;
}
.item-name{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.true-button-box{
  position: fixed;
  width: 100%;
  height:100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  font-size: 34rpx;
  color: rgb(51, 51, 51);
}
.item-portrait{
  background-repeat: no-repeat;
  background-size: 100%;
  background-position: center;
  box-sizing: border-box;
  border-radius: 50%;
  width: 75rpx;
  height: 75rpx;
  min-width: 75rpx;
  min-height: 75rpx;
  margin:20rpx 20rpx 20rpx 0;
}