.guidance-triangle{
  top:-26rpx;
  left:80rpx
}
.red-dian{
  border-radius:50%;
  background-color:rgb(255, 95, 25);
  width:14rpx;
  height:14rpx;
  position: absolute;
  top:7rpx;
