/*补丁 ps：解决scroll-view高度有时不正确的现象，体验很差*/
.content{
  background-color: #f0f1f6;
}
/*聊天信息-box*/
scroll-view {
  position: absolute;
  box-sizing: border-box;
  background-color: #f0f1f6;
  width: 100%;
  transition: all 0.25S cubic-bezier(0,0,0.78,1)
}
.liubai{width:100%;height:20rpx;}
textarea{
  max-height:200rpx;
}
.textarea-view{
  height:50rpx;
  width:100%;
}
.news-box{
  display: flex;
  width: 100%;
  padding:0 25rpx;
  box-sizing: border-box;
  clear: none;
}
/*本体头像框*/
.self-portrait{
  float: right;
  margin-left:16rpx;
  width: 75rpx;
  height:75rpx;
  min-width: 75rpx;
  min-height:75rpx;
  border-radius: 50%;
  clear: none;
}
/*目标头像框*/
.target-portrait{
  float: left;
  margin-right:20rpx;
  width: 75rpx;
  height:75rpx;
  min-width: 75rpx;
  min-height:75rpx;
  border-radius: 50%;
  clear: none;
}
/*消息框一*/
.news-one{
  float: right;
  box-sizing: border-box;
  padding:30rpx;
  width: 520rpx;
  height: 200rpx;
  background-color: #fff;
  margin-bottom:20rpx;
  border: 1rpx solid #fff;
  border-radius: 14rpx;
  clear: none;
}
.new-one-img{
  float: left;
  width: 140rpx;
  height: 140rpx;
  background-color: #ccc
}
.new-one-content{
  float: right;
  width: 302rpx;
  height: 86rpx;
  margin-left:22rpx;
  /*换行+省略*/
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  font-size: 32rpx;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2; 
}
.new-one-time{
  float: right;
  width: 302rpx;
  font-size: 20rpx;
  margin-top:20rpx
}
/*消息框二.css*/
.news-two{
  float: right;
  box-sizing: border-box;
  padding:25rpx 30rpx 25rpx 25rpx;
  max-width: 520rpx;
  border-radius: 14rpx;
  background-color: #fff;
  margin-bottom:20rpx;
  word-break: break-all;
  text-align: justify;
  font-size: 32rpx;
  position: relative;
}
/*目标消息框*/
.target-news{
  float: left;
  box-sizing: border-box;
  padding:25rpx 30rpx 25rpx 25rpx;
  max-width: 520rpx;
  border-radius: 14rpx;
