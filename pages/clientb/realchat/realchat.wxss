  color:#fff;
  margin-bottom:20rpx;
  word-break: break-all;
  text-align: justify;
  font-size: 32rpx;
  position: relative;
}
/*时间box*/
.news-time{
  display: inline-block;
  margin-left:50%;
  transform: translateX(-50%);
  padding: 0 24rpx;
  text-align: center;
  font-size: 20rpx;
  border-radius: 16rpx;
  background-color: #d9d9d9;
  margin-bottom:20rpx;
  clear: both;
}
/*查看*/
.news-see{
  text-align: center;
  font-size: 20rpx;
}
/*底部输入框*/
.input-bottom{
  box-sizing: border-box;
  background-color: #fff;
  position: absolute;
  border-bottom: 1rpx solid #e5e5e5;
  z-index: 998;
  min-height:100rpx;
  width: 100%;
  display: flex;
  align-items: flex-end;
}
.input-bottom-img{
  float:left;
  width: 116rpx;
  min-width: 116rpx;
  height: 100rpx;
  padding:20rpx 28rpx;
  box-sizing: border-box;
  z-index: 999;
}
.meng-box{
  bottom:380rpx;
}
.input-bottom-center{
  width:520rpx;
  min-height:70rpx;
  margin:15rpx 0 ;
  display: flex;
  align-items: center;
  background-color: #f0f1f6;
  box-sizing: border-box;
  border:1rpx solid rgb(217, 217, 217);
  border-radius: 10rpx;
}
.news-two-self-tail{
  width:23rpx;
  height:22rpx;
  position: absolute;
  bottom: 0;
  right:0;
  transform: translateX(42%)
}
.news-two-target-tail{
  width:23rpx;
  height:22rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  transform: translateX(-42%)
}
/*input扩展菜单*/
.input-extend{
  height:280rpx;
  position: absolute;
  bottom: 0;
  width: 100%;
  border-top:1px solid #e5e5e5;
  padding-left: 52rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.input-extend-item{
  float: left;
  clear: none;
  text-align: center;
  padding:40rpx 52rpx 0rpx 3rpx;
}
.input-extend-icon{
  box-sizing: border-box;
  border:1px solid #e5e5e5;
  border-radius: 24rpx;
  height: 118rpx;
  width: 118rpx;
  background-repeat:no-repeat;
  background-size: 42%;
  background-position: center;
}
input-extend-text{
  width: 118rpx;
  font-size: 28rpx;
  text-align: center;
}
.input-bottom-send{
  margin:20rpx 15rpx;
  border-radius: 10rpx;
  color: #fff;
  font-size: 32rpx;
  background-image: -webkit-linear-gradient( 90deg, rgb(255,186,23) 0%, rgb(255,160,25) 100%);
  max-width: 85rpx;
  width: 85rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  box-sizing: border-box;
}
.send-err-box{
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.send-err{
  position: relative;
  top:-12.5rpx;
  margin:0 10rpx;
  width: 32rpx;
  height: 32rpx;
  color:#fff;
  background-color: rgb(255, 95, 25);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.send-err-img{
  width: 5rpx;
  height: 20rpx;
}
.send-err-gif{
  margin:0 10rpx;
  width: 32rpx;
  height: 32rpx;
  position: relative;
  top:-12.5rpx;
}
.news-img{
  float: right;
  max-width: 320rpx;
  max-height:225rpx;
  margin-bottom: 20rpx;
}
/*operate*/
.operate-box{
  position: fixed;
  left:13rpx;
  padding:34rpx 30rpx 34rpx 33rpx;
  box-shadow: 0px 5rpx 40rpx 0px rgba(179, 179, 179, 0.33);
